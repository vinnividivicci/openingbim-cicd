{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "Dockerfile.server",
    "watchPatterns": [
      "src/**",
      "requirements.txt",
      "package*.json",
      "tsconfig*.json",
      "Dockerfile.server",
      "patches/**"
    ]
  },
  "deploy": {
    "startCommand": "npx tsx src/server/server.ts",
    "healthcheckPath": "/health",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 5
  }
}
